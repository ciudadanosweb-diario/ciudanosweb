import { createContext, useContext, useEffect, useState, useRef, ReactNode } from 'react';
import { User } from '@supabase/supabase-js';
import { supabase, Profile } from '../lib/supabase';

type AuthContextType = {
  user: User | null;
  profile: Profile | null;
  loading: boolean;
  isAdmin: boolean;
  authRefreshing: boolean;
  signIn: (email: string, password: string) => Promise<{ error: Error | null }>;
  signUp: (email: string, password: string, fullName: string) => Promise<{ error: Error | null }>;
  signOut: () => Promise<void>;
};

const AuthContext = createContext<AuthContextType | undefined>(undefined);

export function AuthProvider({ children }: { children: ReactNode }) {
  const [user, setUser] = useState<User | null>(null);
  const [profile, setProfile] = useState<Profile | null>(null);
  const [loading, setLoading] = useState(true);
  const loggedOutRef = useRef(false);
  const [authRefreshing, setAuthRefreshing] = useState(false);

  const logAuthDiagnostics = (label: string, session?: any) => {
    try {
      const now = new Date();
      const sbKeys: string[] = [];
      for (let i = 0; i < localStorage.length; i++) {
        const key = localStorage.key(i);
        if (key && key.startsWith('sb-')) sbKeys.push(key);
      }
      console.log(`üß™ [AuthDiag:${label}] time=${now.toISOString()} online=${navigator.onLine} vis=${document.visibilityState}`);
      console.log(`üß™ [AuthDiag:${label}] sb-keys-count=${sbKeys.length} keys=${sbKeys.join(', ') || 'none'}`);
      if (session) {
        const exp = session.expires_at ? new Date(session.expires_at * 1000).toISOString() : 'n/a';
        console.log(`üß™ [AuthDiag:${label}] session user=${session.user?.id || 'none'} exp=${exp}`);
      } else {
        console.log(`üß™ [AuthDiag:${label}] session=none`);
      }
    } catch (e) {
      console.warn('Auth diagnostics error:', e);
    }
  };

  useEffect(() => {
    // Verificar sesi√≥n inicial
    const initializeAuth = async () => {
      try {
        console.log('üîê Iniciando autenticaci√≥n...');
        console.log('üåê Estado de conexi√≥n:', navigator.onLine ? 'Online' : 'Offline');
        
        if (!navigator.onLine) {
          console.warn('‚ö†Ô∏è No hay conexi√≥n a internet');
          setUser(null);
          setProfile(null);
          setLoading(false);
          return;
        }
        
        const { data: { session }, error } = await supabase.auth.getSession();
        logAuthDiagnostics('init:getSession', session);
        
        if (error) {
          console.error('‚ùå Error al obtener sesi√≥n:', error);
          setUser(null);
          setProfile(null);
        } else if (session?.user) {
          console.log('‚úÖ Sesi√≥n encontrada para usuario:', session.user.id);
          setUser(session.user);
          await loadProfile(session.user.id);
        } else {
          console.log('‚ÑπÔ∏è No hay sesi√≥n activa');
          setUser(null);
          setProfile(null);
        }
      } catch (error) {
        console.error('‚ùå Error al inicializar autenticaci√≥n:', error);
        setUser(null);
        setProfile(null);
      } finally {
        setLoading(false);
        console.log('‚úÖ Autenticaci√≥n inicializada');
      }
    };

    initializeAuth();

    const { data: { subscription } } = supabase.auth.onAuthStateChange(async (event, session) => {
      console.log('üîÑ Cambio de estado de autenticaci√≥n:', event, session?.user?.id || 'sin usuario');
      logAuthDiagnostics(`onAuth:${event}`, session);
      try {
        setUser(session?.user ?? null);
        if (session?.user) {
          await loadProfile(session.user.id);
        } else {
          setProfile(null);
        }
      } catch (error) {
        console.error('‚ùå Error en cambio de estado de autenticaci√≥n:', error);
        // Limpiar estado en caso de error
        setUser(null);
        setProfile(null);
      }
    });

    // Listeners de conexi√≥n a internet
    const handleOnline = () => {
      console.log('üåê Conexi√≥n restaurada');
      logAuthDiagnostics('net:online');
      // Intentar refrescar la sesi√≥n cuando se recupere la conexi√≥n
      supabase.auth.getSession().then(({ data: { session } }) => {
        logAuthDiagnostics('net:online:getSession', session);
        if (session?.user) {
          console.log('‚úÖ Sesi√≥n restaurada despu√©s de reconexi√≥n');
          setUser(session.user);
          loadProfile(session.user.id);
        }
      });
    };

    const handleOffline = () => {
      console.warn('‚ö†Ô∏è Conexi√≥n perdida');
      logAuthDiagnostics('net:offline');
    };

    // Eliminado: Listener de storage que interfer√≠a con reautenticaci√≥n

    // Refrescar sesi√≥n al volver a la pesta√±a
    const handleVisibilityChange = async () => {
      if (document.visibilityState === 'visible') {
        console.log('üëÄ Pesta√±a activa, refrescando sesi√≥n');
        try {
          setAuthRefreshing(true);
          const { data, error } = await supabase.auth.refreshSession();
          if (error) {
            console.warn('‚ö†Ô∏è Error al refrescar en visibilidad:', error.message);
          }
          const session = data?.session ?? (await supabase.auth.getSession()).data.session;
          logAuthDiagnostics('vis:refreshed', session);
          if (session?.user) {
            setUser(session.user);
            await loadProfile(session.user.id);
          } else {
            setUser(null);
            setProfile(null);
          }
        } catch (e) {
          console.error('‚ùå Excepci√≥n refrescando sesi√≥n en visibilidad:', e);
        } finally {
          setAuthRefreshing(false);
        }
      }
    };

    window.addEventListener('online', handleOnline);
    window.addEventListener('offline', handleOffline);
    document.addEventListener('visibilitychange', handleVisibilityChange);

    return () => {
      subscription.unsubscribe();
      window.removeEventListener('online', handleOnline);
      window.removeEventListener('offline', handleOffline);
      document.removeEventListener('visibilitychange', handleVisibilityChange);
    };
  }, []);

  const clearSession = () => {
    setUser(null);
    setProfile(null);
    // Evitar borrar todo localStorage para no afectar otras pesta√±as/sesiones
    try {
      localStorage.removeItem('article_draft');
      localStorage.removeItem('article_draft_timestamp');
      logAuthDiagnostics('clearSession:after');
    } catch (e) {
      console.warn('No se pudo limpiar llaves locales de borrador', e);
    }
  };

  const handleAuthError = (error: any) => {
    if (error?.message?.includes('Invalid Refresh Token') ||
        error?.message?.includes('Refresh Token Not Found') ||
        error?.message?.includes('JWT expired')) {
      console.warn('‚ö†Ô∏è Problema con token, intentando refrescar sesi√≥n');
      // Intentar refrescar la sesi√≥n una vez
      setAuthRefreshing(true);
      supabase.auth.refreshSession()
        .then(({ data, error: refreshError }) => {
          if (refreshError) {
            console.error('‚ùå Error al refrescar sesi√≥n:', refreshError);
            clearSession();
          } else if (data?.session?.user) {
            console.log('‚úÖ Sesi√≥n refrescada exitosamente');
            setUser(data.session.user);
          } else {
            console.warn('‚ö†Ô∏è No se pudo refrescar sesi√≥n');
            clearSession();
          }
        })
        .finally(() => setAuthRefreshing(false));
      return true; // Error manejado
    }
    return false; // Error no manejado
  };

  const loadProfile = async (userId: string) => {
    try {
      console.log('üë§ Cargando perfil del usuario:', userId);
      const { data, error } = await supabase.from('profiles').select('*').eq('id', userId).maybeSingle();
      
      if (error) {
        console.error('‚ùå Error al cargar perfil:', error);
        // Si el error est√° relacionado con tokens, manejarlo y salir
        if (handleAuthError(error)) {
          console.warn('‚ö†Ô∏è Error de autenticaci√≥n manejado, limpiando sesi√≥n');
          return;
        }
        throw error;
      }
      
      if (data) {
        console.log('‚úÖ Perfil cargado:', { id: data.id, is_admin: data.is_admin });
        setProfile(data);
      } else {
        console.warn('‚ö†Ô∏è No se encontr√≥ perfil para el usuario');
        setProfile(null);
      }
    } catch (err) {
      console.error('‚ùå Excepci√≥n al cargar perfil:', err);
      setProfile(null);
    }
  };

  const signIn = async (email: string, password: string) => {
    try {
      setLoading(true);
      const { error } = await supabase.auth.signInWithPassword({ email, password });
      if (error) {
        console.error('Sign in error:', error);
      }
      return { error };
    } catch (error) {
      console.error('Sign in exception:', error);
      return { error: error as Error };
    } finally {
      setLoading(false);
    }
  };

  const signUp = async (email: string, password: string, fullName: string) => {
    try {
      const { error } = await supabase.auth.signUp({
        email,
        password,
        options: {
          data: {
            full_name: fullName,
          },
        },
      });
      if (error) {
        console.error('Sign up error:', error);
      }
      return { error };
    } catch (error) {
      console.error('Sign up exception:', error);
      return { error: error as Error };
    }
  };

  const signOut = async () => {
    try {
      console.log('Iniciando cierre de sesi√≥n...');
      loggedOutRef.current = true;
      try { supabase.auth.stopAutoRefresh(); } catch {}
      
      // Cerrar sesi√≥n en Supabase
      const { error } = await supabase.auth.signOut({ scope: 'global' });
      if (error) {
        console.error('Error en supabase.auth.signOut():', error);
        // No lanzamos error, continuamos limpiando estado local
      } else {
        console.log('Supabase signOut exitoso');
      }
      
      // Limpiar estado local inmediatamente
      logAuthDiagnostics('signOut:beforeClear');
      clearSession();
      // Eliminar posibles claves de sesi√≥n de Supabase en almacenamiento local
      try {
        const keysToRemove: string[] = [];
        for (let i = 0; i < localStorage.length; i++) {
          const key = localStorage.key(i);
          if (key && key.startsWith('sb-')) {
            keysToRemove.push(key);
          }
        }
        keysToRemove.forEach((k) => localStorage.removeItem(k));
        // Y tambi√©n en sessionStorage por si el proveedor cambi√≥ de storage
        const sKeys: string[] = [];
        for (let i = 0; i < sessionStorage.length; i++) {
          const key = sessionStorage.key(i);
          if (key && key.startsWith('sb-')) {
            sKeys.push(key);
          }
        }
        sKeys.forEach((k) => sessionStorage.removeItem(k));
        logAuthDiagnostics('signOut:afterClear');
        console.log('Claves sb-* eliminadas del localStorage:', keysToRemove.length);
      } catch (e) {
        console.warn('No se pudieron eliminar claves sb-* de localStorage', e);
      }
      
      console.log('Estado local limpiado, sesi√≥n cerrada exitosamente');
    } catch (error) {
      console.error('Excepci√≥n en signOut:', error);
      // Limpiar estado local incluso si hay error
      clearSession();
      console.log('Estado local limpiado a pesar del error');
    }
  };

  const value = {
    user,
    profile,
    loading,
    isAdmin: profile?.is_admin ?? false,
    authRefreshing,
    signIn,
    signUp,
    signOut,
  };

  return <AuthContext.Provider value={value}>{children}</AuthContext.Provider>;
}

export function useAuth() {
  const context = useContext(AuthContext);
  if (context === undefined) {
    throw new Error('useAuth must be used within an AuthProvider');
  }
  return context;
}
